upstream animals {
    server 127.0.0.1:8000;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/website-ericappelt/html;

    index index.html index.htm;

    server_name _;

    location / {
        try_files $uri $uri/ =404;
    }

    location /farm/ {
        rewrite ^/farm/(.*) /$1  break;
        proxy_pass http://animals;
    }
}
